<fw:AcrylicWindow x:Class="PLApp.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLApp"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="640" Width="800"
         WindowStyle="ThreeDBorderWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding ElementName=TopBar, Path= ActualHeight}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <materialDesign:DrawerHost  Grid.RowSpan="2" Panel.ZIndex="1"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <materialDesign:DrawerHost.Style>
                <Style
                    TargetType="materialDesign:DrawerHost"
                    BasedOn="{StaticResource {x:Type materialDesign:DrawerHost}}">
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding}"
                            Value="True">
                            <Setter
                                Property="OverlayBackground"
                                Value="{DynamicResource PrimaryHueMidBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </materialDesign:DrawerHost.Style>
            <materialDesign:DrawerHost.LeftDrawerContent>
                <Grid Width="240" Name="Drawer" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{Binding ElementName=TopBar, Path= ActualHeight}"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <StackPanel Grid.RowSpan="1" Orientation="Horizontal">
                        <!-- Menu icon -->
                        <materialDesign:PackIcon Kind="SurroundSound" Width="30" Height="30" Margin="0 0 8 0"/>
                     
                        <!-- Menu title -->
                        <TextBlock 
                            Margin="4"
                            Text="Menu"
                            HorizontalAlignment="Center"
                            Width="150"
                            FontWeight="Bold" 
                            FontSize="20"/>
                        <ToggleButton
                            x:Name="MenuToggleButton"
                            HorizontalAlignment="Right"
                            Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                            IsChecked="False"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            AutomationProperties.Name="HamburgerToggleButton"/>
                    </StackPanel>

                    <!-- Menu -->
                    <Grid Grid.Row="2" fw:PointerTracker.Enabled="True" Background="#01FFFFFF">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" HorizontalAlignment="Stretch" Height="1" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" Fill="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" />
                        <Button Grid.Row="1" Content="Fill Data"  Width="{Binding ElementName=Drawer, Path=ActualWidth}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Style="{StaticResource ButtonRevealStyle}" Click="Button_FillData_Click" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"/>

                        <Rectangle Grid.Row="2" HorizontalAlignment="Stretch" Height="1" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" Fill="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" />
                        <Button Grid.Row="3" Content="Shopping Analysis"  Width="{Binding ElementName=Drawer, Path=ActualWidth}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Style="{StaticResource ButtonRevealStyle}" Click="Button_ShoppingAnalysis_Click" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"/>
                        <Rectangle Grid.Row="4" HorizontalAlignment="Stretch" Height="1" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" Fill="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" />
                        <Button Grid.Row="5" Content="Shopping Recommends"  Width="{Binding ElementName=Drawer, Path=ActualWidth}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Style="{StaticResource ButtonRevealStyle}" Click="Button_ShoppingRecommends_Click" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"/>
                        <Rectangle Grid.Row="6" HorizontalAlignment="Stretch" Height="1" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" Fill="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" />
                        <Button Grid.Row="7" Content="Settings"  Width="{Binding ElementName=Drawer, Path=ActualWidth}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Style="{StaticResource ButtonRevealStyle}" Click="Button_Settings_Click" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"/>
                        <Rectangle Grid.Row="8" HorizontalAlignment="Stretch" Height="1" Stroke="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" Fill="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" />
                        <Button Grid.Row="9" Content="About" Width="{Binding ElementName=Drawer, Path=ActualWidth}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Style="{StaticResource ButtonRevealStyle}" Click="Button_About_Click" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"/>
                    </Grid>
                   
                </Grid>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <!-- Top Bar -->
            <StackPanel Orientation="Horizontal" MinWidth="220" VerticalAlignment="Top" 
                        Background="{x:Static fw:AccentColors.ImmersiveSystemAccentBrush}" Name="TopBar">
                <ToggleButton
                    Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                    DockPanel.Dock="Top"
                    HorizontalAlignment="Left" 
                    Margin="16"
                    Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                    CommandParameter="{x:Static Dock.Left}"
                    IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"/>
                <!-- App name -->
                <TextBlock 
                    Margin="20 0 0 0"
                    Text="{Binding ElementName=MainUserControl, Path=Content.Title}" 
                    Style="{StaticResource MaterialDesignHeadline2TextBlock}"
                    DockPanel.Dock="Top"
                    FontSize="40"
                    TextAlignment="Center"
                    VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:DrawerHost>
        <UserControl Name="MainUserControl" Grid.Row="1">
        </UserControl>
    </Grid>
</fw:AcrylicWindow>
